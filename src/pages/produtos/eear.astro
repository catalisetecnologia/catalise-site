---
import { Image } from "astro:assets";
import Layout from "../../layouts/Layout.astro";

import Modal from "../../components/Modal.astro";

import Capa from "../../components/Capa.astro";
import Destaques from "../../components/Destaques.astro";
import Section from "../../components/Section.astro";
import CardAprovacoes from "../../components/CardAprovacoes.astro";
import Accordeon from "../../components/Accordeon.astro";
import Cardserv from "../../components/Cardserv.astro";
import CardDepoimentos from "../../components/CardDepoimentos.astro";

import capa from "../../img/turma eear.png";
import video from "../../img/Desvende os segredos - EEARr.png";
import materiais from "../../img/materiais.png";

import { getEntry } from "astro:content";
const turmas = await getEntry("produtos", "turmas");
const perguntas = await getEntry("alunos", "perguntas");
const depoimentos = await getEntry("alunos", "depoimentos");
const aprovados = await getEntry("alunos", "aprovados");
const destaques = await getEntry("produtos", "destaques");
const serv = await getEntry("produtos", "serv");
---

<Layout title="Turma Catalise EEAR: Conquiste seus sonhos com a gente!" description="Descubra o caminho da aprovação com nossa turma EEAR!">
  <main class="container">
    <Capa
      title="Turma"
      destaque=" EEAR"
      botao="Quero me matricular"
      link="#matricula"
      estilo="capa-page"
    >
      <p class="txt-capa" slot="conteudo">
        Descubra o caminho da aprovação com nossa turma EEAR! Aqui você vai
        aprender tudo o que precisa para conquistar os seus sonhos!
      </p>
      <Image src={capa} alt="Capa do Catálise" class="img-capa" slot="imagem" />
    </Capa>
    <Destaques destaques={destaques} page="EEAR" />
    <Section
      estilo="claro"
      titulo="Desvende os segredos da aprovação na EEAR"
      video
      vlink={turmas}
      key="eear"
    >
      <ul class="capa-itens" slot="conteudo">
        <li>
          <svg
            xmlns="http://www.w3.org/2000/svg"
            fill="none"
            viewBox="0 0 132 144"
          >
            <path
              fill="#77DCF8"
              d="M122.35 55.45c12.87 7.23 12.87 25.87 0 33.1L28 141.57c-12.55 7.05-28-2.08-28-16.55V18.98C0 4.51 15.45-4.62 28 2.43l94.35 53.02Z"
              opacity=".7"></path>
          </svg>
           Aulas do básico ao avançado
        </li>
        <li>
          <svg
            xmlns="http://www.w3.org/2000/svg"
            fill="none"
            viewBox="0 0 132 144"
          >
            <path
              fill="#77DCF8"
              d="M122.35 55.45c12.87 7.23 12.87 25.87 0 33.1L28 141.57c-12.55 7.05-28-2.08-28-16.55V18.98C0 4.51 15.45-4.62 28 2.43l94.35 53.02Z"
              opacity=".7"></path>
          </svg>
           Mentoria com aprovados
        </li>
        <li>
          <svg
            xmlns="http://www.w3.org/2000/svg"
            fill="none"
            viewBox="0 0 132 144"
          >
            <path
              fill="#77DCF8"
              d="M122.35 55.45c12.87 7.23 12.87 25.87 0 33.1L28 141.57c-12.55 7.05-28-2.08-28-16.55V18.98C0 4.51 15.45-4.62 28 2.43l94.35 53.02Z"
              opacity=".7"></path>
          </svg>
           Mentorias de orientação de estudo
        </li>
        <li>
          <svg
            xmlns="http://www.w3.org/2000/svg"
            fill="none"
            viewBox="0 0 132 144"
          >
            <path
              fill="#77DCF8"
              d="M122.35 55.45c12.87 7.23 12.87 25.87 0 33.1L28 141.57c-12.55 7.05-28-2.08-28-16.55V18.98C0 4.51 15.45-4.62 28 2.43l94.35 53.02Z"
              opacity=".7"></path>
          </svg>
           E muito mais!
        </li>
      </ul>
      <Image src={video} alt="Capa do Catálise" class="img-capa-video" />
    </Section>
    <Section
      estilo="centro"
      colunas="col3"
      tag="Conteúdo da turma"
      titulo="O que você aprenderá"
      subtitulo="Confira abaixo a lista de todos os assuntos que você aprenderá dentro da nossa Turma EEAR"
    >
      <div class="tema">
        <h2>Matemática</h2>
        <ul>
          <li>Aritmética</li>
          <li>Álgebra</li>
          <li>Geometria Básica</li>
          <li>Conjuntos</li>
        </ul>
        <button
          aria-label="Veja mais"
          id="modal-matematica_trigger"
          class="btn-tema">Veja mais</button
        >
      </div>

      <div class="tema">
        <h2>Física</h2>
        <ul>
          <li>Conceitos iniciais da física</li>
          <li>Vetores</li>
          <li>Cinemática</li>
          <li>Dinâmica</li>
        </ul>
        <button
          aria-label="Veja mais"
          id="modal-fisica_trigger"
          class="btn-tema">Veja mais</button
        >
      </div>

      <div class="tema">
        <h2>Língua Portuguesa</h2>
        <ul>
          <li>Interpretação de texto</li>
          <li>Aspectos do Texto</li>
          <li>Tipologia Textual</li>
          <li>Gêneros Textuais</li>
        </ul>
        <button
          aria-label="Veja mais"
          id="modal-portuguesa_trigger"
          class="btn-tema">Veja mais</button
        >
      </div>

      <div class="tema">
        <h2>Língua Inglesa</h2>
        <ul>
          <li>Present</li>
          <li>Cognates and False Cognates</li>
          <li>Connectives and Adjectives</li>
          <li>Comparatives and Superlatives</li>
        </ul>
        <button
          aria-label="Veja mais"
          id="modal-inglesa_trigger"
          class="btn-tema">Veja mais</button
        >
      </div>

      <div class="tema">
        <h2>Curso de Produtividade</h2>
        <ul>
          <li>Introdução a produtividade</li>
          <li>Estudo Produtivo</li>
          <li>Mindset do aluno aprovado</li>
          <li>Foco</li>
        </ul>
        <button
          aria-label="Veja mais"
          id="modal-produtividade_trigger"
          class="btn-tema">Veja mais</button
        >
      </div>
    </Section>
    <Capa estilo="claro" title="Material didático">
      <div slot="conteudo">
        <p class="txt-capa-claro">
          Entrando para a Turma EEAR você terá acesso aos seguintes materiais:
        </p>
        <ul class="mt-2">
          <li>Miscelâneas da EEAR</li>
          <li>Listas de Exercício do Básico ao Avançado.</li>
          <li>Planilha de acompanhamento de desempenho</li>
        </ul>
      </div>
      <Image
        src={materiais}
        alt="Capa do Catálise"
        class="img-capa-material"
        slot="imagem"
      />
    </Capa>
    <Section
      estilo="centro"
      tag="Apoio"
      titulo="Nós pensamos em tudo!"
      subtitulo="Veja o que mais você vai ter acesso para conquistar a sua tão sonhada aprovação"
      colunas="col4"
    >
      <Cardserv serv={serv} page="EEAR" />
    </Section>
    <Section
      estilo="claro aprovacoes"
      tag="Aprovações"
      titulo="Conheça nossos aprovados"
      subtitulo="Assista as inspiradoras jornadas de nossos alunos aprovados. Eles acreditaram no sonho, perseveraram e conquistaram o topo. O próximo pode ser você!"
    >
      <CardAprovacoes aprovados={aprovados} page="" />
    </Section>
    <Section
      estilo="centro"
      tag=""
      titulo="Rotina de estudos"
      colunas="col4 g4"
    >
      <div class="rotina">
        <div>1</div>
        <div>
          <h2>Assista<br />aulas gravadas</h2>
          <p>
            Nossas aulas no modelo microlearning te levarão do básico até o
            avançado.
          </p>
        </div>
      </div>
      <div class="rotina">
        <div>2</div>
        <div>
          <h2>Faça exercícios<br />de fixação</h2>
          <p>
            Após cada aula você terá acesso a listas curtas sobre o assunto da
            aula para fixação.
          </p>
        </div>
      </div>
      <div class="rotina">
        <div>3</div>
        <div>
          <h2>Aprofundamento<br />completo</h2>
          <p>
            Após finalizar um bloco de conteúdos passamos listas com nível cada
            vez maior.
          </p>
        </div>
      </div>
      <div class="rotina">
        <div>4</div>
        <div>
          <h2>Estude<br />em grupo</h2>
          <p>
            Conheça na nossa comunidade pessoas que caminham para a aprovação.
          </p>
        </div>
      </div>
      <div class="rotina">
        <div>5</div>
        <div>
          <h2>Participe<br />das mentorias</h2>
          <p>
            Nas mentorias você vai aprender tudo o que precisa além do estudo.
          </p>
        </div>
      </div>
      <div class="rotina">
        <div>6</div>
        <div>
          <h2>Faça simulados<br />EEAR</h2>
          <p>
            Nossos ciclos de simulados são cuidadosamente feitos para a sua
            aprovação.
          </p>
        </div>
      </div>
      <div class="rotina">
        <div>7</div>
        <div>
          <h2>Acompanhe o<br />seu desempenho</h2>
          <p>
            Saiba exatamente o que errou nos simulados e onde está o conteúdo
            para revisar.
          </p>
        </div>
      </div>
      <div class="rotina">
        <div>8</div>
        <div>
          <h2>Receba todo o<br />suporte necessário</h2>
          <p>
            Com nossas mentorias e apoio da coordenação tudo ficará mais fácil.
          </p>
        </div>
      </div>
    </Section>
    <Section
      estilo="claro"
      tag="Depoimentos"
      titulo="Compartilhe a experiência dos nossos alunos"
      subtitulo="Aqui temos depoimentos de alunos em diversas etapas da preparação para a EEAR, tanto daqueles que ainda não conquistaram aprovações quanto daqueles que já conquistaram aprovações.."
    >
      <div class="depoimentos">
        <CardDepoimentos depoimentos={depoimentos} page="" />
      </div>
    </Section>
    <Capa
      title="Garanta"
      linha
      destaque=" sua Vaga!"
      botao="Quero entrar na lista de espera"
      link="https://docs.google.com/forms/d/e/1FAIpQLSc6oKJjhIPZh04KJxy5fOOGZEtLtBmKFFophGQnqTrzFTTtqw/viewform?usp=sf_link"
      id="matricula"
      estilo="capa-page"
    >
      <p class="txt-capa" slot="conteudo">
        Aproveite a oportunidade de ter a melhor preparação para a EEAR.
      </p>
      <ul class="capa-itens" slot="conteudo">
        <li>
          <svg
            xmlns="http://www.w3.org/2000/svg"
            fill="none"
            viewBox="0 0 480 480"
          >
            <path
              fill="#fff"
              d="M111.69 47.84a16 16 0 0 0-11 4.85l-62.6 62.6a16.01 16.01 0 0 0 .03 25.46l62.57 62.56a16.01 16.01 0 1 0 22.62-22.62L86.62 144H304c62.04 0 112 49.96 112 112s-49.96 112-112 112h-64a16.02 16.02 0 0 0-11.46 27.4A16.02 16.02 0 0 0 240 400h64c73.67 0 132.4-56.52 140.75-128H448v-16c0-79.34-64.66-144-144-144H86.62l36.7-36.69a16 16 0 0 0-11.63-27.47ZM48 368a16 16 0 1 0 0 32 16 16 0 0 0 0-32Zm64 0a16 16 0 1 0 0 32 16 16 0 0 0 0-32Zm64 0a16 16 0 1 0 0 32 16 16 0 0 0 0-32Z"
            ></path>
          </svg>
           Garantimos seu dinheiro de volta por até 7 dias
        </li>
        <li>
          <svg
            xmlns="http://www.w3.org/2000/svg"
            fill="none"
            viewBox="0 0 480 480"
          >
            <path
              fill="#fff"
              d="M352 16H128a32 32 0 0 0-32 32v384a32 32 0 0 0 32 32h224a32 32 0 0 0 32-32V48a32 32 0 0 0-32-32Zm-72 16a8 8 0 1 1 0 16 8 8 0 0 1 0-16Zm-64 0h32a8 8 0 0 1 0 16h-32a8 8 0 0 1 0-16Zm136 400H128V48h48l6.62 6.62c6 6 14.15 9.38 22.63 9.38h69.49a32 32 0 0 0 22.62-9.38L304 48h48v384Z"
            ></path>
          </svg>
           Estude do seu jeito e em qualquer dispositivo
        </li>
      </ul>
      <h1 class="valor" slot="conteudo">R$ 497,00</h1>
      <Image
        src={capa}
        alt="Capa do Catálise"
        class="img-capa img-capa-valor"
        slot="imagem"
      />
    </Capa>
    <Section estilo="claro centro" tag="" titulo="Perguntas frequentes">
      <Accordeon perguntas={perguntas} estilo="grande" page="EEAR" />
    </Section>
    <Modal triggerId="modal-matematica_trigger" closeText="X">
      <div class="modal-main">
        <h1>Matemática</h1>
        <h2>Frente 1</h2>
        <ul>
          <li>Aritmética</li>
          <li>Álgebra</li>
          <li>Geometria Básica</li>
          <li>Conjuntos</li>
          <li>Funções</li>
        </ul>
        <h2>Frente 2</h2>
        <ul>
          <li>Trigonometria</li>
          <li>Números complexos</li>
          <li>Polinômios</li>
        </ul>
        <h2>Frente 3</h2>
        <ul>
          <li>Geometria Plana</li>
          <li>Geometria Analítica</li>
          <li>Geometria Espacial</li>
        </ul>
        <h2>Frente 4</h2>
        <ul>
          <li>Sequências</li>
          <li>Análise Combinatória</li>
          <li>Probabilidade</li>
          <li>Matrizes e Determinantes</li>
          <li>Sistemas Lineares</li>
        </ul>
      </div>
    </Modal>
    <Modal triggerId="modal-fisica_trigger" closeText="X">
      <div class="modal-main">
        <h1>Física</h1>
        <h2>Frente 1</h2>
        <ul>
          <li>Conceitos iniciais da física</li>
          <li>Vetores</li>
          <li>Cinemática</li>
          <li>Dinâmica</li>
          <li>Trabalho e Energia</li>
          <li>Impulso e Quantidade de Movimento</li>
          <li>Estática</li>
          <li>Gravitação Universal</li>
          <li>Física Moderna - Atomística</li>
        </ul>
        <h2>Frente 2</h2>
        <ul>
          <li>Óptica Geométrica</li>
          <li>Termometria</li>
          <li>Dilatação</li>
          <li>Calorimetria</li>
          <li>Gases</li>
          <li>Termodinâmica</li>
          <li>Movimento Harmônico Simples</li>
          <li>Ondulatória</li>
        </ul>
        <h2>Frente 3</h2>
        <ul>
          <li>Eletrostática</li>
          <li>Eletrodinâmica</li>
          <li>Magnetismo</li>
        </ul>
      </div>
    </Modal>
    <Modal triggerId="modal-portuguesa_trigger" closeText="X">
      <div class="modal-main">
        <h1>Língua Portuguesa</h1>
        <h2>Interpretação de texto</h2>
        <ul>
          <li>Aspectos do Texto</li>
          <li>Tipologia Textual</li>
          <li>Gêneros Textuais</li>
          <li>Figuras de Linguagem</li>
          <li>Funções da linguagem</li>
          <li>Categorias de mundo</li>
          <li>Temas e Figuras</li>
          <li>Discurso e Interdiscursividade</li>
          <li>Propaganda ideológica</li>
          <li>Intertextualidade</li>
          <li>Texto, Ideologia e Argumentação</li>
          <li>Nível da expressão</li>
          <li>Implícitos, ambiguidade e semântica</li>
          <li>Variação linguística</li>
          <li>Coesão</li>
          <li>Coerência e Concisão</li>
        </ul>
        <h2>Gramática</h2>
        <ul>
          <li>Classes de palavras</li>
          <li>Formação de palavras</li>
          <li>Análise sintática</li>
          <li>Crase</li>
